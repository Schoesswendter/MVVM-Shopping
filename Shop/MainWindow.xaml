<Window x:Class="Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Text="{Binding Title}" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" FontWeight="Bold" FontSize="28" FontFamily="Bahnschrift SemiBold" Margin="0,0,-3,0"/>
        <ContentPresenter Content="{Binding ItemList}" Grid.Row="0" VerticalAlignment="Top"/>
    </Grid>
</Window>
